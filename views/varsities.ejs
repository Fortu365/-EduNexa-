            font-weight: 600;
            margin-bottom: 12px;
            color: var(--primary);
        }

        .university-link {
            display: inline-flex;
            align-items: center;
            font-weight: 500;
            color: var(--secondary);
            text-decoration: none;
            transition: 0.2s ease;
            margin-top: 10px;
        }

        .university-link:hover {
            color: var(--accent);
        }

        .university-link i {
            margin-left: 6px;
            font-size: 0.9rem;
