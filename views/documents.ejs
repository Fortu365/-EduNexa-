            flex: 1;
        }

        .stat-value {
            font-size: 28px;
            font-weight: 700;
            color: #475569;
            margin-bottom: 4px;
        }

        .stat-label {
            font-size: 12px;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
        }

        .stat:not(:last-child) {
            border-right: 1px solid #e2e8f0;
        }

        @media (max-width: 768px) {
            .document-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 12px;
            }
            
            .document-actions {
                width: 100%;
            }
            
            .stats-bar {
                flex-direction: column;
                gap: 20px;
            }
            
            .stat:not(:last-child) {
                border-right: none;
                border-bottom: 1px solid #e2e8f0;
                padding-bottom: 20px;
            }
            
            header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }

            .astericks::after {
                content: "*";
                color: var(--danger-color);
                margin-left: 4px;
            }
        }
    </style>
